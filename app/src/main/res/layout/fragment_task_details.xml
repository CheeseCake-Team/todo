<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_theme_light_primary"
    tools:context=".ui.TaskDetailsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutSecondaryBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_large_84"
        android:background="@drawable/task_background">

        <TextView
            android:id="@+id/textViewTaskName"
            android:textSize="@dimen/font_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium_16"
            android:layout_marginTop="@dimen/margin_large_24"
            android:textColor="@color/black_title"
            android:text="@string/task_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_medium_16"
            android:text="@string/user_name"
            android:textColor="@color/md_theme_light_primary"
            android:textSize="@dimen/font_size_14"
            app:layout_constraintBottom_toBottomOf="@+id/textViewTaskName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewTaskName" />

        <ImageView
            android:id="@+id/imageViewUserIcon"
            android:layout_width="@dimen/margin_medium_16"
            android:layout_height="@dimen/margin_medium_16"
            android:layout_marginEnd="@dimen/margin_small_4"
            android:src="@drawable/user_icon"
            app:layout_constraintBottom_toBottomOf="@+id/textViewUserName"
            app:layout_constraintEnd_toStartOf="@+id/textViewUserName"
            app:layout_constraintTop_toTopOf="@+id/textViewUserName" />

        <TextView
            android:id="@+id/textViewTaskDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small_8"
            android:text="@string/task_date"
            android:layout_marginStart="@dimen/margin_small_6"
            android:textColor="@color/black_hint"
            android:textSize="@dimen/font_size_12"
            app:layout_constraintStart_toEndOf="@+id/imageViewCalenderIcon"
            app:layout_constraintTop_toBottomOf="@+id/textViewTaskName" />

        <ImageView
            android:id="@+id/imageViewCalenderIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calendar_icon"
            android:layout_marginStart="@dimen/margin_medium_16"
            app:layout_constraintBottom_toBottomOf="@+id/textViewTaskDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewTaskDate" />

        <TextView
            android:id="@+id/textViewTaskTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_medium_16"
            android:text="@string/task_time"
            android:textColor="@color/black_hint"
            android:textSize="@dimen/font_size_12"
            app:layout_constraintBottom_toBottomOf="@+id/textViewTaskDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewTaskDate" />


        <ImageView
            android:id="@+id/imageViewTimeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_icon"
            android:layout_marginEnd="@dimen/margin_small_6"
            app:layout_constraintBottom_toBottomOf="@+id/textViewTaskTime"
            app:layout_constraintEnd_toStartOf="@+id/textViewTaskTime"
            app:layout_constraintTop_toTopOf="@+id/textViewTaskTime" />

        <TextView
            android:id="@+id/textViewTaskContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_content"
            android:textColor="@color/black_details"
            android:layout_marginTop="@dimen/margin_medium_16"
            android:layout_marginStart="@dimen/margin_medium_16"
            android:layout_marginEnd="@dimen/margin_medium_16"
            android:textSize="@dimen/font_size_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTaskDate" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/imageViewBackgroundVector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/background_svg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>