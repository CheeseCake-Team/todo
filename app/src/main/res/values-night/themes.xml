<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Todo" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primary</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimary</item>

    </style>

    <style name="Theme.App.Todo.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground" >#141218</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_dark_theme</item>
        <item name="postSplashScreenTheme">@style/Theme.Todo</item>
    </style>

    <style name="SignUpDetailsText" parent="TextSubDetails">
        <item name="android:textColor">@color/white_details</item>
    </style>

    <style name="HaveAnAccountText" parent="TextSubHint">
        <item name="android:textColor">@color/white_hint</item>
    </style>

    <style name="CardTitle" parent="create_button">
        <item name="android:textColor">@color/white_title</item>
    </style>

    <style name="CardDetails" parent="TextSubDetails">
        <item name="android:textColor">@color/white_details</item>
    </style>

    <style name="CardDateAndTime" parent="TextHint">
        <item name="android:textColor">@color/white_hint</item>
    </style>

    <style name="CardBackground">
        <item name="cardBackgroundColor">#242228</item>
    </style>

    <style name="UsernameAndPasswordViewStyle">
        <item name="android:background">@drawable/shape_user_name_and_password_dark_mode</item>
    </style>

</resources>